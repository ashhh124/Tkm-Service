<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.serv.tkm.activity_email">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitEnd"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/logoemail" />

    <EditText
        android:id="@+id/phone"
        android:layout_width="520dp"
        android:layout_height="80dp"
        android:background="@drawable/editbg"
        android:drawableStart="@drawable/baseline_phone_24"
        android:drawablePadding="8dp"
        android:ems="10"
        android:hint="Номер телефона"
        android:paddingStart="10dp"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="@+id/spinner"
        app:layout_constraintStart_toStartOf="@+id/spinner"
        app:layout_constraintTop_toBottomOf="@+id/spinner" />

    <EditText
        android:id="@+id/name"
        android:layout_width="520dp"
        android:layout_height="80dp"
        android:background="@drawable/editbg"
        android:drawableStart="@drawable/baseline_person_24"
        android:drawablePadding="8dp"
        android:ems="10"
        android:hint="Введите ФИО"
        android:textSize="34dp"
        android:paddingStart="10dp"
        app:layout_constraintEnd_toEndOf="@+id/phone"
        app:layout_constraintStart_toStartOf="@+id/phone"
        app:layout_constraintTop_toBottomOf="@+id/phone" />

    <EditText
        android:id="@+id/address"
        android:layout_width="520dp"
        android:layout_height="80dp"
        android:background="@drawable/editbg"
        android:drawableStart="@drawable/baseline_home_work_24"
        android:drawablePadding="8dp"
        android:ems="10"
        android:hint="Ваш адрес"
        android:textSize="34dp"
        android:paddingStart="10dp"
        app:layout_constraintEnd_toEndOf="@+id/name"
        app:layout_constraintStart_toStartOf="@+id/name"
        app:layout_constraintTop_toBottomOf="@+id/name" />

    <EditText
        android:id="@+id/jk"
        android:layout_width="520dp"
        android:layout_height="80dp"
        android:background="@drawable/editbg"
        android:drawableStart="@drawable/baseline_apartment_24"
        android:drawablePadding="8dp"
        android:ems="10"
        android:hint="Введите ваше ЖК"
        android:paddingStart="10dp"
        android:textSize="34dp"
        app:layout_constraintEnd_toEndOf="@+id/name"
        app:layout_constraintStart_toStartOf="@+id/name"
        app:layout_constraintTop_toBottomOf="@+id/address" />

    <EditText
        android:id="@+id/subject"
        android:layout_width="520dp"
        android:layout_height="80dp"
        android:background="@drawable/editbg"
        android:drawableStart="@drawable/baseline_textsms_24"
        android:drawablePadding="8dp"
        android:ems="10"
        android:hint="Тема заявки, расскажите о проблеме в двух словах"
        android:paddingStart="10dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/address"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/address" />

    <EditText
        android:id="@+id/longtext"
        android:layout_width="520dp"
        android:layout_height="300dp"
        android:textSize="34dp"
        android:background="@drawable/editbg"
        android:ems="10"
        android:gravity="fill_horizontal"
        android:hint="Расскажите о проблеме подробнее"
        android:paddingStart="15dp"
        android:paddingTop="10dp"
        app:layout_constraintEnd_toEndOf="@+id/name"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/name"
        app:layout_constraintTop_toBottomOf="@+id/jk" />

    <Button
        android:id="@+id/btnsend"
        android:layout_width="480dp"
        android:layout_height="80dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/btnbg1"
        android:fontFamily="sans-serif"
        android:text="Отправить заявку"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="34dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/longtext"
        app:layout_constraintStart_toStartOf="@+id/longtext"
        app:layout_constraintTop_toBottomOf="@+id/longtext" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="520dp"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/editbg"
        android:dropDownWidth="wrap_content"
        android:gravity="start"
        android:minWidth="320dp"
        android:popupBackground="@drawable/editbg"
        android:singleLine="false"
        android:spinnerStyle="@style/SpinnerStyle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>